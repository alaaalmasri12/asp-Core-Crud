@model IEnumerable<Employee>
@{
    ViewData["Title"] = "AllEmployees";
}

<h2>Employees Data</h2>
<style>
    .createbtn
    {
        margin-bottom:3%;
    }
</style>
<a asp-action="Create"  class="createbtn btn btn-success" asp-controller="Home">Create New Employee</a>
<table class="table table-bordered table-hover">
    <tr>
        <th>@Html.DisplayNameFor(model => model.ID)</th>
        <th>@Html.DisplayNameFor(model => model.EmpName)</th>
        <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>
        <th>@Html.DisplayNameFor(model => model.Salary)</th>
        <th>@Html.DisplayNameFor(model => model.BOD)</th>
        <th>@Html.DisplayNameFor(model => model.Country)</th>
        <th>Operations</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ID</td>
        <td>@item.EmpName</td>
        <td>@item.EmailAddress</td>
        <td>@item.Salary</td>
        <td>@item.BOD</td>
        <td>@item.Country</td>
        <td>
            <a href class="btn btn-primary" href="#">EDIT</a>
            <a asp-route-ID="@item.ID" class="btn btn-danger"  asp-action="Delete"  asp-controller="Home">Delete</a>
            <a asp-route-ID="@item.ID" asp-action="Details" asp-controller="Home" class="btn btn-info"> More Details</a>
        </td>

    </tr>
            }
    </table>

